<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/value_16dp">

            <EditText
                android:layout_width="@dimen/value_0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/et_addReminder"
                android:layout_marginTop="@dimen/value_16dp"
                android:hint="Add Reminder.."
                android:textColorHint="@color/Blue"
                android:paddingLeft="@dimen/value_10dp"
                android:paddingRight="@dimen/value_10dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calenderimage"
                android:src="@drawable/ic_date_range_36dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="@dimen/value_10dp"
                android:layout_marginRight="@dimen/value_16dp"
                android:tint="@color/Blue"/>
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_2dp"
        android:background="@color/colorDarkGray"
        android:layout_marginTop="5dp"></View>

</LinearLayout>