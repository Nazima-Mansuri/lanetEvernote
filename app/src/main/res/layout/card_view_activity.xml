<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_76dp"
        android:layout_marginTop="@dimen/value_5dp"
        android:layout_marginBottom="@dimen/value_5dp"
        card_view:cardCornerRadius="@dimen/value_5dp"
        android:layout_marginLeft="@dimen/value_5dp"
        android:layout_marginRight="@dimen/value_5dp"
        card_view:cardPreventCornerOverlap="false"
        app:cardPreventCornerOverlap="false"
        android:elevation="@dimen/value_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/tTitle"
                    android:text="@string/title"
                    style="@style/titleStyleListView"
                    android:layout_weight=".5"
                    android:layout_marginTop="@dimen/value_10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/dateTitle"
                    android:paddingLeft="@dimen/value_15dp"
                    android:textColor="@color/Blue"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/value_72dp"
                    android:layout_height="match_parent"
                    android:id="@+id/displayImage"
                    android:layout_gravity="right"
                    android:paddingRight="@dimen/value_15dp"
                    android:paddingTop="@dimen/value_10dp"
                    android:paddingBottom="@dimen/value_10dp" />
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>