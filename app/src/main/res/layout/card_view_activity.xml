<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_76dp"
        android:layout_marginTop="@dimen/value_10dp"
        card_view:cardCornerRadius="@dimen/value_5dp"
        android:layout_marginLeft="@dimen/value_5dp"
        android:layout_marginRight="@dimen/value_5dp"
        android:layout_weight="1.53">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/value_0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tTitle"
                android:text="@string/title"
                style="@style/titleStyleListView"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/value_72dp"
                android:layout_height="match_parent"
                android:id="@+id/displayImage"
                android:layout_gravity="right"
                android:paddingRight="@dimen/value_15dp"
                android:paddingTop="@dimen/value_10dp"
                android:paddingBottom="@dimen/value_10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>